<p id="notice"><%= notice %></p>

<h1>Covid Informations</h1>

<table>
  <thead>
    <tr>
      <th>Date reference</th>
      <th>Suspected</th>
      <th>Confirmed</th>
      <th>Home isolation</th>
      <th>Hospitalized</th>
      <th>Discarded</th>
      <th>Deaths</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @covid_informations.each do |covid_information| %>
      <tr>
        <td><%= covid_information.date_reference %></td>
        <td><%= covid_information.suspected %></td>
        <td><%= covid_information.confirmed %></td>
        <td><%= covid_information.home_isolation %></td>
        <td><%= covid_information.hospitalized %></td>
        <td><%= covid_information.discarded %></td>
        <td><%= covid_information.deaths %></td>
        <td><%= covid_information.city_id %></td>
        <td><%= link_to 'Show', covid_information %></td>
        <td><%= link_to 'Edit', edit_covid_information_path(covid_information) %></td>
        <td><%= link_to 'Destroy', covid_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Covid Information', new_covid_information_path %>
