<div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>Admin</b>LTE</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Acessar</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper: false }) do |f| %>
        <div class="input-group mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "email", class: 'form-control' } %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>

        <div class="input-group mb-3">
           <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", class: 'form-control' } %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <%= f.input :remember_me, as: :boolean, id: "remember" if devise_mapping.rememberable? %>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <%= f.button :submit, "Sign in", class: "btn btn-primary btn-block" %>
          </div>
          <!-- /.col -->
        </div>
      <% end %>

      <p class="mb-1">
        <a href="#">Esqueci a minha senha?</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
